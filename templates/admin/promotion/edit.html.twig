{% extends 'admin/base.html.twig' %}

{% block title %}{{parent()}} | Edit Promotion {% endblock %}

{% block body %}
<div class=" container container-fluid">
    <h1 class="mb-3 text-center">Edit Promotion</h1>
    <hr>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning">
                    <h3 class="card-title">{{ promotion.modeleChaussure.nom }}</h3>
                </div>
                <div class="card-body">
                    {{form_start(form)}}
                    <div class="form-group row">
                        <div class="col">
                            {{form_row(form.dateDebut)}}
                        </div>
                        <div class="col">
                            {{form_row(form.dateFin)}}
                        </div>
                    </div>
                    {{form_row(form.pourcentage, {'type': 'number'})}}
                    {{form_row(form.modeleChaussure)}}
                </div>
                <div class="card-footer">
                    {{form_widget(form.valider)}}
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
